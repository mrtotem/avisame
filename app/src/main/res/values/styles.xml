<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Button style-->

    <style name="BasicButtonStyle">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <!-- Custom Dialog-->

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!-- Tab Layout Style-->

    <style name="BaseTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/tabLayoutGray</item>
        <item name="tabTextColor">@color/titleTextView</item>
        <item name="tabTextAppearance">@style/HomeTabText</item>
    </style>

    <style name="AppTabLayout.BottomTab" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_bg</item>
        <item name="tabTextColor">@color/titleTextView</item>
        <item name="tabSelectedTextColor">@color/tabLayoutGray</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/button_round_gray</item>
        <item name="android:dividerPadding">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">@dimen/extra_small</item>
        <!--<item name="fontPath">fonts/Hanken-Book.ttf</item>-->
    </style>

    <style name="HomeTabText">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Edit Text-->

    <style name="BaseAvisameEditText">
        <item name="android:inputType">textNoSuggestions</item>
    </style>

</resources>
